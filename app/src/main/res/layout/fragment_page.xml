<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageFragment">

    <fragment
        android:id="@+id/fragment_info"
        android:name="com.eutophia.sound_helper.InfoFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp" />

    <fragment
        android:id="@+id/fragment_date"
        android:name="com.eutophia.sound_helper.DateFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_info"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <fragment
        android:id="@+id/fragment_disease"
        android:name="com.eutophia.sound_helper.DiseaseFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_date"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <fragment
        android:id="@+id/fragment_confirm"
        android:name="com.eutophia.sound_helper.ConfirmFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_disease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>